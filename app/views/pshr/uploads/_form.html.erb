<%= form_with model: upload, url: main_app.url_for(upload), local: false do |form| %>

  <%= render 'pshr/uploads/fields', form: form %>

  <%= form.submit "Save Upload" %>
  <%= link_to "Delete", main_app.url_for(form.object), method: :delete, remote: true, data: { "action": "ajax:success->pshr--uploads#remove" } if upload.persisted? %>
<% end %>
